<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LilLoaderWidget">
        <attr name="lilNetworkErrorView" format="reference" />
        <attr name="lilNoDataErrorView" format="reference" />
        <attr name="lilLoaderWidgetProgressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LilLoaderDialog">
        <attr name="lilDefaultMessage" format="string" />
        <attr name="lilTitleStyle" format="reference" />
        <attr name="lilMessageStyle" format="reference" />
        <attr name="lilLoaderDialogProgressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LilSeekBar">
        <attr name="lilOrientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

</resources>